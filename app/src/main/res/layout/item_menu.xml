<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp">

    <ImageView
        android:id="@+id/imv_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/core_purple"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ln_tutorials"/>

    <LinearLayout
        android:id="@+id/ln_tutorials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"

        app:layout_constraintTop_toBottomOf="@id/imv_background"
        app:layout_constraintStart_toStartOf="parent">
    <ImageView
        android:id="@+id/imv_tutorials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tutorial"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_tutorials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turorials"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"

        android:layout_marginStart="@dimen/_12sdp"

        app:layout_constraintTop_toTopOf="@id/imv_tutorials"
        app:layout_constraintStart_toEndOf="@id/imv_tutorials"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_rate_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/ln_tutorials"
        app:layout_constraintStart_toStartOf="@id/ln_tutorials">
        <ImageView
            android:id="@+id/imv_rate_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tutorial"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_rate_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate App"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"

            android:layout_marginStart="@dimen/_12sdp"

            app:layout_constraintTop_toTopOf="@id/imv_rate_app"
            app:layout_constraintStart_toEndOf="@id/imv_rate_app"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/ln_rate_app"
        app:layout_constraintStart_toStartOf="@id/ln_tutorials">
        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_app"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share App"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"

            android:layout_marginStart="@dimen/_12sdp"

            app:layout_constraintTop_toTopOf="@id/imv_share"
            app:layout_constraintStart_toEndOf="@id/imv_share"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/ln_share"
        app:layout_constraintStart_toStartOf="@id/ln_tutorials">
        <ImageView
            android:id="@+id/imv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_feedback"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"

            android:layout_marginStart="@dimen/_12sdp"

            app:layout_constraintTop_toTopOf="@id/imv_feedback"
            app:layout_constraintStart_toEndOf="@id/imv_feedback"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/ln_feedback"
        app:layout_constraintStart_toStartOf="@id/ln_tutorials">
        <ImageView
            android:id="@+id/imv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_about_app"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="@dimen/_20sdp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"

            android:layout_marginStart="@dimen/_12sdp"

            app:layout_constraintTop_toTopOf="@id/imv_about"
            app:layout_constraintStart_toEndOf="@id/imv_about"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>