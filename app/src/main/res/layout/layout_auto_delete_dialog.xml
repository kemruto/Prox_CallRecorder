<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/bg_round_16_white">

    <TextView
        android:id="@+id/tv_title_delete_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_round_top_corner_7_purple"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="Auto Delete Recordings"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_delete_dialog">

        <TextView
            android:id="@+id/tv_15day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="15 Days"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_1month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="1 Month"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"

            android:layout_marginTop="@dimen/_15sdp"

            app:layout_constraintStart_toStartOf="@id/tv_15day"
            app:layout_constraintTop_toBottomOf="@id/tv_15day"/>

        <TextView
            android:id="@+id/tv_3month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="60 Minutes"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"

            android:layout_marginTop="@dimen/_15sdp"

            app:layout_constraintStart_toStartOf="@id/tv_1month"
            app:layout_constraintTop_toBottomOf="@id/tv_1month"/>

        <TextView
            android:id="@+id/tv_6month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="6 Months"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"

            android:layout_marginTop="@dimen/_15sdp"

            app:layout_constraintStart_toStartOf="@id/tv_3month"
            app:layout_constraintTop_toBottomOf="@id/tv_3month"/>

        <TextView
            android:id="@+id/tv_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="Never"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"

            android:layout_marginTop="@dimen/_15sdp"

            app:layout_constraintStart_toStartOf="@id/tv_6month"
            app:layout_constraintTop_toBottomOf="@id/tv_6month"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_submit_timesetting"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Submit"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/bg_round_7_purple"
            android:textColor="@color/white"

            android:layout_marginTop="@dimen/_20sdp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_never"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>