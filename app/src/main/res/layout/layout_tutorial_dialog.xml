<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:background="@drawable/bg_round_16_white">

    <TextView
        android:id="@+id/tv_title_dialog_turorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_round_top_corner_7_purple"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:padding="@dimen/_12sdp"
        android:text="Things to do when recording isn't working"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_turorial">

        <ImageView
            android:id="@+id/imv_headset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_headset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_headset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Headset"
            android:textColor="@color/core_purple"

            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            app:layout_constraintTop_toTopOf="@id/imv_headset"
            app:layout_constraintStart_toEndOf="@id/imv_headset"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Try using a headset while talking calls"

            android:layout_marginTop="@dimen/_5sdp"

            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_title_headset"
            app:layout_constraintTop_toBottomOf="@id/tv_title_headset"/>

        <ImageView
            android:id="@+id/imv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_15sdp"

            android:src="@drawable/ic_speaker"
            app:layout_constraintStart_toStartOf="@id/imv_headset"
            app:layout_constraintTop_toBottomOf="@id/imv_headset" />

        <TextView
            android:id="@+id/tv_title_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Volume"
            android:textColor="@color/core_purple"

            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"

            app:layout_constraintTop_toTopOf="@id/imv_volume"
            app:layout_constraintStart_toEndOf="@id/imv_volume"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="Increase volume to max"

            android:layout_marginTop="@dimen/_5sdp"

            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_title_volume"
            app:layout_constraintTop_toBottomOf="@id/tv_title_volume"/>
        <TextView
            android:id="@+id/tv_grant_tutorial_dialog"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:text="Grant"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            android:background= "@drawable/bg_round_7_purple"
            app:layout_constraintTop_toBottomOf="@id/imv_volume"
            app:layout_constraintStart_toEndOf="@id/imv_volume"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>