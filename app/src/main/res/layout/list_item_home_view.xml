<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@mipmap/ic_launcher"

        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12" />

    <TextView
        android:id="@+id/tv_name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_10sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Private Number"
        android:textColor="@color/black"

        android:textSize="@dimen/_15sdp"

        app:layout_constraintStart_toEndOf="@id/imv_avatar"
        app:layout_constraintTop_toTopOf="@id/imv_avatar" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_10sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="dd/mm/yyyy"

        android:textSize="@dimen/_12sdp"

        app:layout_constraintStart_toEndOf="@id/imv_avatar"
        app:layout_constraintTop_toBottomOf="@id/tv_name_contact" />

    <ImageView
        android:id="@+id/lv_status_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_status_call"

        android:layout_marginStart="@dimen/_10sdp"

        app:layout_constraintStart_toEndOf="@id/tv_name_contact"
        app:layout_constraintTop_toTopOf="@id/tv_name_contact" />

    <ImageView
        android:id="@+id/lv_status_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/level_status_star"

        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"

        app:layout_constraintStart_toEndOf="@id/lv_status_call"
        app:layout_constraintTop_toTopOf="@id/lv_status_call" />

    <ImageView
        android:id="@+id/imv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"

        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"

        app:layout_constraintStart_toEndOf="@id/lv_status_star"
        app:layout_constraintTop_toTopOf="@id/lv_status_call" />


</androidx.constraintlayout.widget.ConstraintLayout>